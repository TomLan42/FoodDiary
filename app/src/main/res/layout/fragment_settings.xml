<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/settingshead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="GENERAL SETTINGS"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"

        />
    <TextView
        android:id="@+id/breakfaststart"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        android:text="Breakfast Starttime"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/breakfastend"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:background="?attr/selectableItemBackground"
        android:text="Breakfast Endtime"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/lunchstart"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:background="?attr/selectableItemBackground"
        android:text="Lunch Starttime"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/lunchend"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        android:text="Lunch EndTime"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/dinnerstart"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:paddingLeft="15dp"
        android:background="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="Dinner Starttime"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/dinnerend"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="15dp"
        android:text="Dinner Endtime"
        android:textSize="19sp"
        android:textStyle="bold" />

</LinearLayout>